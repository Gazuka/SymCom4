{% extends 'symcom4/admin/_text.html.twig' %}
{% block all %}
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">Type d'entreprise</h5>
            <div class="row">
                <div class="col-12">
                    {% if structure.entreprise.types | length == 0 %}
                        <p class="text-danger text-center">
                            Attention, si l'entreprise n'a pas de type, elle ne sera pas visible sur le site !
                        </p>
                    {% else %}
                        <ul>
                            {% for type in structure.entreprise.types %}
                                <li>{{ type.parentName }}{{ type.nom }}</li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
            </div>
            <div class="row">
                <div class="col-12 text-right">
                    {{ path('admin_structures_entreprise_edittype', {'idstructure': structure.id, 'idpagemere': idPage }) | ModifierBouton }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}