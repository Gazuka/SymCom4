{% extends 'symcom4/admin/_text.html.twig' %}
{% block all %}
    <div id="gestion_image" class="card">
        <div class="card-body">
            <h5 class="card-title">{{ text_service_image }}</h5>
            {% if parent.lien != null %}
                <table class="table">
                    <thead class="thead-light">
                        <tr>
                            <th style="width:5%;" scope="col">{{ text_id }}</th>
                            <th style="width:50%;" scope="col">{{ text_service_image }}</th>
                            <th style="width:45%;" scope="col">{{ text_actions }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>{#{{ parent.image.id }}#}</td>
                            <td>...</td>
                            <td>
                                {# {{ path('admin_structure_editimage', {'idstructure': parent.id, 'idimage': parent.image.id, 'idpagemere': idPage}) | ModifierBouton }}
                                {{ path('admin_structure_deleteimage', {'idstructure': parent.id, 'idimage': parent.image.id, 'idpagemere': idPage}) | SupprimerBouton }} #}
                            </td>
                        </tr>   
                    </tbody>
                </table>
            {% else %}
                <p class="text-danger">{{ text_no_image }}</p>
                {{ path('admin_structure_addlien', {'idstructure': parent.id, 'idpagemere': idPage}) | AddLien(text_add_image)}}
            {% endif %}
        </div>
    </div>
{% endblock %}