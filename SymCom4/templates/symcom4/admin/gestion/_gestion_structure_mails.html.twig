{% extends 'symcom4/admin/_text.html.twig' %}
{% block all %}
    <div id="gestion_mails" class="card mb-3"> 
        <div class="card-body">
            <h5 class="card-title">{{ text_service_contact_mail}}</h5>
            {% if mails|length > 0 %}
                <table class="table">
                    <thead class="thead-light">
                        <tr>
                            <th style="width:5%;" scope="col">{{ text_id }}</th>
                            <th style="width:50%;" scope="col">{{ text_service_contact_mail_adresse }}</th>
                            <th style="width:45%;" scope="col">{{ text_actions }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for mail in mails %}
                            <tr>
                                <td>{{ mail.id }}</td>
                                <td>{{ mail.adresse }}</td>
                                <td>
                                    {{ path('admin_structure_editcontact', {'idstructure': parent.id, 'idcontact': mail.contact.id, 'idpagemere': idPage }) | ModifierBouton }}
                                    {{ path('admin_structure_deletecontact', {'idstructure': parent.id, 'idcontact': mail.contact.id, 'idpagemere': idPage}) | SupprimerBouton }}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table> 
            {% else %}
                <p class="text-danger">{{ text_no_mail }}</p>
            {% endif %}
            {{ path('admin_structure_addcontact', {'idstructure': parent.id, 'type': 'mail', 'idpagemere': idPage}) | AddContacts('mail', text_add_mail)}}
        </div>
    </div>
{% endblock %}