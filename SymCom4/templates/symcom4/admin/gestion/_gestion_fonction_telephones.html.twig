{% if telephones | length > 0 %}
    {% embed 'symcom4/admin/template_sb2/elements/_table_mini.html.twig' with {'idPage': idPage, 'parent': parent, 'telephones': telephones} only %}
        {% set nomColonnes = ['Téléphones', 'Actions'] %}
        {% block tbody %}
            {% for telephone in telephones %}
                <tr>
                    <td>{{ telephone.numero }}</td>
                    <td>
                        {{ path('admin_structure_fonction_editcontact', {'idfonction': parent.id, 'idcontact': telephone.contact.id, 'idpagemere': idPage }) | LienBtnRond('Editer', 'fa-edit', 'primary') }}
                        {{ path('admin_structure_fonction_deletecontact', {'idfonction': parent.id, 'idcontact': telephone.contact.id, 'idpagemere': idPage}) | LienBtnRond('Supprimer', 'fa-trash', 'danger') }}
                    </td>
                </tr>
            {% endfor %}
        {% endblock %}
    {% endembed %}
{% endif %}
            
<div class='text-center'>{{ path('admin_structure_fonction_addcontact', {'idfonction': parent.id, 'type': 'telephone', 'idpagemere': idPage}) | LienBtnWithIcon('Ajouter un numéro de téléphone', ['fa-plus', 'fa-phone'], 'success')}}</div>