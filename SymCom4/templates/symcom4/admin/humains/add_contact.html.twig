{% extends 'symcom4/admin/template_sb2/_base.html.twig' %}

{% block content %}

    {% embed 'symcom4/admin/template_sb2/elements/_card_with_menu.html.twig' with {'form': form, 'type': type} only %}
        
        {% set titre = "Ajout d'un contact Ã  " ~ humain.nom ~ ' ' ~ humain.prenom %}
        
        {% set actions = null %}

        {% block contenu %}
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            {% if type == 'telephone' %}
                {{ form_row(form.numero) }}
            {% endif %}
            {% if type == 'mail' %}
                {{ form_row(form.adresse) }}
            {% endif %}
            {% if type == 'adresse' %}
                {{ form_row(form.numero) }}
                {{ form_row(form.rue) }}
                {{ form_row(form.complement) }}
                {{ form_row(form.codePostal) }}
                {{ form_row(form.ville) }}  
            {% endif %}
            {{ form_widget(form.contact) }}
            {{ 'Enregistrer' | BtnSubmitWithIcon('fa-check', 'success') }}
            {{ form_end(form) }}
        {% endblock %}
        
    {% endembed %}

{% endblock %}