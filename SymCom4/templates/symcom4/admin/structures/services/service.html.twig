{% extends 'symcom4/admin/partials/_base_admin.html.twig' %}

{% block title %}
    {{ parent() }} - {{ service.structure.nom }}
{% endblock %}

{% block content %}

    <div class="row mb-3">
        <div class="col-6">
            {{ gestionService.gestionServiceBase }}
            <div class="card mb-3">
                <div class="card-body">
                    {% include 'symcom4/admin/partials/_liensrapides.html.twig' %}    
                </div>
            </div>
            {{ gestionService.gestionLien }}
        </div>
        <div class="col-6">
            {{ gestionService.gestionAdresses }}
            {{ gestionService.gestionTelephones }}
            {{ gestionService.gestionMails }}
        </div>
    </div>

    <!-- Affichage du bouton de suppression du service -->
    <div class="row">
        <div class="card col-12">
            <div class="card-body text-center">
                {{ path('admin_structures_service_delete', {'id': service.id}) | SupprimerBouton(service.structure.nom) }}
            </div>
        </div>
    </div>

{% endblock %}