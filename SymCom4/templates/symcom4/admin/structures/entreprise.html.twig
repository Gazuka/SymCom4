{% extends 'symcom4/admin/partials/_base_admin.html.twig' %}

{% block title %}
    {{ parent() }} - {{ entreprise.structure.nom }}
{% endblock %}

{% block content %}

    <div class="row mb-3">
        <div class="col-6">
            {{ gestionService.gestionEntrepriseBase }}
            {# {% include 'symcom4/admin/partials/_liensrapides.html.twig' %} #}
            {{ gestionService.gestionEntrepriseType }}
            {{ gestionService.gestionLien }}
        </div>
        <div class="col-6">
            {{ gestionService.gestionAdresses }}
            {{ gestionService.gestionTelephones }}
            {{ gestionService.gestionMails }}
        </div>
    </div>
    
    <div class="row mb-3">
        <div class="col-12">
            {{ gestionService.gestionStructureFonctions }}
        </div>
    </div>

    <!-- Affichage du bouton de suppression du entreprise -->
    <div  id="delete_entreprise" class="row">
        <div class="card col-12">
            <div class="card-body text-center">
                {{ path('admin_structures_entreprise_delete', {'idstructure': entreprise.structure.id}) | SupprimerBouton(entreprise.structure.nom) }}
            </div>
        </div>
    </div>

{% endblock %}