{% extends 'symcom4/admin/template_sb2/_base.html.twig' %}

{% block content %}
    {% if fonction is not defined %}
        {% set fonction = null %}
    {% endif %}

    {% embed 'symcom4/admin/template_sb2/elements/_card_with_menu.html.twig' with {'structure': structure, 'form': form, 'fonction': fonction} only %}
        {% if fonction is not null %}
            {% set titre = "Edition de la fonction : " ~ fonction.typeFonction.titre %}
        {% else %}
            {% set titre = "Ajout d'une nouvelle fonction" %}
        {% endif %}

        {% set actions = null %}

        {% block contenu %}
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            {{ form_row(form.typeFonction) }}
            {{ form_row(form.secteur) }}
            {{ 'Enregistrer' | BtnSubmitWithIcon('fa-check', 'success') }}
            {{ form_end(form) }}
        {% endblock %}
        
    {% endembed %}

{% endblock %}