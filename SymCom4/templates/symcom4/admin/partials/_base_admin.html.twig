{% extends '_base.html.twig' %}

{% block title %}
    {{ parent() }}
    | Administration
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin/base.css') }}">
    <link rel="stylesheet" href="{{ asset('css/admin/menu.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div id="admin_body" class="row">
            <div id="admin_menu" class="col-2">
                {% include 'symcom4/admin/partials/_menu.html.twig' %}
                {% block menu %}{% endblock %}
            </div>
            <div class="col-10">
                <div class="row">
                    <div id="admin_header" class="col-12">
                        {% include 'symcom4/admin/partials/_navbar.html.twig' %}
                        {% block header %}{% endblock %}
                    </div>
                    <div id="admin_content" class="mt-3 col-12">
                        {% include 'symcom4/admin/partials/_flash.html.twig' %}
                        {% block content %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}