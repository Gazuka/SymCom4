{% extends 'symcom4/admin/partials/_base_admin.html.twig' %}

{% block title %}
    {{ parent() }} - {{ fonction.typeFonction.titre }}
{% endblock %}

{% block content %}

    <div class="row mb-3">
        <div class="col-6">
            {{ gestionService.gestionFonctionBase }}
            {# {% include 'symcom4/admin/partials/_liensrapides.html.twig' %} #}
            {#{{ gestionService.gestionAssociationType }}#}
            {# {{ gestionService.gestionLien }} #}
        </div>
        <div class="col-6">
            {{ gestionService.gestionAdresses }}
            {{ gestionService.gestionTelephones }}
            {{ gestionService.gestionMails }}
        </div>
    </div>

    <!-- Affichage du bouton de suppression du service -->
    <div class="row">
        <div class="card col-12">
            <div class="card-body text-center">
                {{ path('admin_fonction_delete', {'idfonction': fonction.id}) | SupprimerBouton(fonction.nom) }}
            </div>
        </div>
    </div>

{% endblock %}