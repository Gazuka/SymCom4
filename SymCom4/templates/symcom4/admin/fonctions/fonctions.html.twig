{% extends 'symcom4/admin/template_sb2/_base.html.twig' %}

{% block content %}

    {% embed 'symcom4/admin/template_sb2/elements/_card_info.html.twig' with {'fonctions': fonctions} only %}
        {% set taille = taille(3, 6) %}
        {% set couleur = 'primary' %}
        {% set icone = 'fa-home' %}
        {% set titre = "Nombre de fonctions" %}
        {% block valeur %}
            {{ fonctions|length }}
        {% endblock %}
    {% endembed %}

    {% embed 'symcom4/admin/template_sb2/elements/_card_info.html.twig' with {'liensRapides': liensRapides} only %}
        {% set taille = taille(9, 12) %}
        {% set couleur = 'success' %}
        {% set icone = 'fa-home' %}
        {% set titre = "Actions rapides" %}
        {% block valeur %}
            {% include 'symcom4/admin/partials/_liensrapides.html.twig' %}
        {% endblock %}        
    {% endembed %}

    {% embed 'symcom4/admin/template_sb2/elements/_table.html.twig' with {'fonctions': fonctions} only %}
        {% set titre = 'Les services' %}
        {% set nomColonnes = ['#', 'Titre', 'Structure', 'Contacts', 'Actions'] %}
        {% block tbody %}
            {% for fonction in fonctions %}
                <tr>
                    <td>{{ fonction.id }}</td>
                    <td>{{ fonction.typeFonction.titre }}</td>
                    <td>{{ fonction.structure.nom }}</td>
                    <td>{{ fonction.contacts | NbrContacts }}</td>
                    <td>
                        &nbsp;
                    </td>
                </tr>
            {% endfor %}
        {% endblock %}
    {% endembed %}

{% endblock %}