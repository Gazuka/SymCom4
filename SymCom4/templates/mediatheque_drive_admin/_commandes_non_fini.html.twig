{% for creneau in anciensCreneaux %}

        
            <div class="alert alert-primary">
                <a class='btn btn-warning mr-3' href='{{ path('admin_mediatheque_drive_creneau_finir', {'idcreneau': creneau.id }) }}'>Finir</a>
                Creneau n°{{ creneau.id }} - {{ creneau.debut | DateComplete }} à {{ creneau.debut | date('H:i') }}
            </div>
            
            
                <div class='row mb-3'>
                    <div class='col-12'>    
                        {% if creneau.commandes | length > 0 %}
                            {% for commande in creneau.commandes %}
                                {% if commande.etat.etat != 'FINI' %}
                                    <a href="{{ path('admin_mediatheque_drive_commande', {'idcommande': commande.id}) }}" class="text-white">
                                        <div class="card p-2 mb-2 bg-danger col-12">
                                            <div class="row">
                                                <div class="col-12">
                                                    {{ commande.membre.utilisateur.humain.nom | upper }}
                                                    {{ commande.membre.utilisateur.humain.prenom | title }}
                                                </div>
                                                <div class="col-12">
                                                    {{ commande.etat.etat | EtatCommandeAdmin}}
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            
        
    
{% endfor %}