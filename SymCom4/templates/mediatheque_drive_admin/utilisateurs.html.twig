{% extends 'mediatheque_drive_admin/_base_admin_drive_mediatheque.html.twig' %}

{% block content %}

    <div class="card">
        <div class="card-header text-center">
                    
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Prenom</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for membre in membres %}
                        <tr>
                            <th scope="row">{{ membre.numCarte }}</th>
                            <td>{{ membre.utilisateur.humain.nom | upper }}</td>
                            <td>{{ membre.utilisateur.humain.prenom | title}}</td>
                            <td><a href='{{ path('mediatheque_drive_login', {'pseudo': membre.numCarte , 'pass': membre.utilisateur.humain.dateNaissance | date('dm')}) }} ' target="_blank">Réserver</a></td>
                        </tr>
                    {% endfor %}                
                </tbody>
            </table>
        </div>
        <div class="card-footer">
                
        </div>
    </div> 
    
{% endblock %}

{% block outils %}
    
    <div class="card bg-primary p-2 mb-3">
        <a class="text-white text-center font-weight-bold" href="{{ path('mediatheque_drive_inscription') }}" target="_blank">
            Ajouter un adhérent
        </a>
    </div>

{% endblock %}